{
  "$schema": "http://json-schema.org/schema",
  "$id": "ServiceSchematic",
  "title": "Service Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "name fo the service",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "project": {
      "type": "string",
      "description": "Target application where the service is going to be created",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    }
  },
  "required": ["name", "project"]
}
