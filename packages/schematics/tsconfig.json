{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "es2018",
      "dom"
    ],
    "rootDir": "src/",
    "outDir": "./src/",
    "baseUrl": "./",
    "incremental": false,
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "~utils/*": [
        "src/utils/*"
      ],
      "~auth/*": [
        "src/lib/auth-jwt/files/src/app/core/auth/*"
      ]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/lib/**/files/**/*"
  ]
}