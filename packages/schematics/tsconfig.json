{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "lib": ["es2018", "dom"],
    "rootDir": "src/",
    "outDir": "./dist",
    "baseUrl": "./",
    "sourceMap": false,
    "incremental": false,
    "noImplicitThis": false,
    "types": ["jest", "node"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/generators/**/files/**/*"],
  "references": [
    {
      "path": "./tsconfig.lib.json",
    },
    {
      "path": "./tsconfig.spec.json",
    },
  ],
}
