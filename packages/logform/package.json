{
  "name": "@devon4node/logform",
  "version": "4.0.0",
  "description": "devon4node Winston Logger formatters.",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "test": "jest",
    "test:cov": "jest --coverage",
    "format": "prettier --write \"lib/**/*.ts\"",
    "lint": "eslint lib/**/*.ts --fix"
  },
  "keywords": [
    "nestjs",
    "devon4node",
    "devonfw"
  ],
  "author": {
    "name": "Capgemini",
    "url": "https://www.capgemini.com/"
  },
  "contributors": [
    "Dario Rodriguez Gonzalez <dario.rodriguez-gonzalez@capgemini.com>"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "chalk": "^5.1.2",
    "logfmt": "^1.3.2",
    "logform": "^2.4.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devonfw/devon4node.git"
  },
  "bugs": {
    "url": "https://github.com/devonfw/devon4node/issues"
  },
  "homepage": "https://github.com/devonfw/devon4node",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "lib",
      "test"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/logfmt": "^1.2.2"
  }
}
